<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="8dp"
    tools:context=".view.DetailActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userAvatar"
        android:layout_width="180dp"
        android:layout_height="180dp"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/repoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#FFF"
        app:layout_constraintStart_toEndOf="@+id/userAvatar"
        tools:text="@tools:sample/full_names"/>

    <TextView
        android:id="@+id/repoDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="#FFF"
        app:layout_constraintStart_toEndOf="@+id/userAvatar"
        app:layout_constraintTop_toBottomOf="@+id/repoName"
        tools:text="@tools:sample/full_names"/>

    <TextView
        android:id="@+id/repoReadme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="#FFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/commitsCount"
        tools:text="@tools:sample/lorem/random"/>

    <TextView
        android:id="@+id/commitsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_history__24dp"
        app:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:drawablePadding="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/branchesCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userAvatar"
        tools:text="24 commits"/>

    <TextView
        android:id="@+id/branchesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:drawableLeft="@drawable/ic_git_branch"
        android:drawablePadding="4dp"
        app:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/contributorsCount"
        app:layout_constraintStart_toEndOf="@+id/commitsCount"
        app:layout_constraintTop_toTopOf="@+id/commitsCount"
        tools:text="2 branches"/>

    <TextView
        android:id="@+id/contributorsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:drawableLeft="@drawable/ic_organization"
        android:drawablePadding="4dp"
        app:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/branchesCount"
        app:layout_constraintTop_toTopOf="@+id/commitsCount"
        tools:text="3 contributors"/>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="There was an error"
        tools:visibility="visible"/>

</android.support.constraint.ConstraintLayout>